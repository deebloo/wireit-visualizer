{
  "name": "wireit-visualizer",
  "version": "1.5.10",
  "description": "",
  "type": "module",
  "exports": {
    ".": {
      "import": "./target/lib.js"
    }
  },
  "bin": {
    "wireit-visualizer": "target/main.js"
  },
  "author": "",
  "license": "ISC",
  "files": [
    "target",
    "views",
    "vendor"
  ],
  "scripts": {
    "start": "wireit",
    "test": "wireit",
    "build": "wireit"
  },
  "wireit": {
    "start": {
      "command": "node target/main.js",
      "service": true,
      "files": [
        "target/**",
        "views/**"
      ],
      "dependencies": [
        "build",
        "./mock/common:build"
      ]
    },
    "build": {
      "dependencies": [
        "graphviz",
        "mermaid",
        "shoelace",
        "lit-html",
        "tsc"
      ]
    },
    "test": {
      "command": "node --test",
      "files": [
        "target/**"
      ],
      "output": [],
      "dependencies": [
        {
          "script": "tsc",
          "cascade": false
        }
      ]
    },
    "tsc": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**",
        "tsconfig.json"
      ],
      "output": [
        "target/**",
        "tsconfig.tsbuildinfo"
      ]
    },
    "graphviz": {
      "command": "copyfiles -u 1 \"node_modules/@viz-js/**/*\" vendor",
      "clean": "if-file-deleted",
      "files": [
        "node_modules/@viz-js/**"
      ],
      "output": [
        "vendor/@viz-js/**"
      ]
    },
    "mermaid": {
      "command": "copyfiles -u 1 \"node_modules/mermaid/**/*\" vendor",
      "clean": "if-file-deleted",
      "files": [
        "node_modules/mermaid/**"
      ],
      "output": [
        "vendor/mermaid/**"
      ]
    },
    "shoelace": {
      "command": "copyfiles -u 1 \"node_modules/@shoelace-style/**/*\" vendor",
      "clean": "if-file-deleted",
      "files": [
        "node_modules/@shoelace-style/**"
      ],
      "output": [
        "vendor/@shoelace-style/**"
      ]
    },
    "lit-html": {
      "command": "copyfiles -u 1 \"node_modules/lit-html/**/*\" vendor",
      "clean": "if-file-deleted",
      "files": [
        "node_modules/lit-html/**"
      ],
      "output": [
        "vendor/lit-html/**"
      ]
    }
  },
  "dependencies": {
    "@shoelace-style/shoelace": "^2.12.0",
    "detect-port": "^1.5.1",
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "lit-html": "^3.1.1",
    "mermaid": "^10.6.1",
    "nunjucks": "^3.2.4",
    "open": "^10.0.3"
  },
  "devDependencies": {
    "@types/detect-port": "^1.3.5",
    "@types/express": "^4.17.21",
    "@types/nunjucks": "^3.2.6",
    "@viz-js/viz": "^3.2.3",
    "copyfiles": "^2.4.1",
    "typescript": "^5.3.2",
    "wireit": "^0.14.1"
  }
}
